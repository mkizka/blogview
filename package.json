{
  "name": "blogview-workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "format": "prettier -w .",
    "version-packages": "changeset version && pnpm format",
    "release": "pnpm build && pnpm -r publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "prettier": "^2.5.1",
    "turbo": "^1.0.26"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          "out/**"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
