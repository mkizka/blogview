{
  "name": "blogview-workspace",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "format": "prettier -w .",
    "new-version": "changeset version && pnpm format && pnpm i --ignore-scripts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.20.0",
    "prettier": "^2.5.1",
    "turbo": "^1.1.2"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
