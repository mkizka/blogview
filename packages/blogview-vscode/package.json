{
  "name": "blogview-vscode",
  "displayName": "Blogview",
  "publisher": "mkizka",
  "private": true,
  "description": "Markdownプレビュー時に一部のはてな記法を変換する拡張機能",
  "version": "1.5.3",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:/entry/"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./tweet.js"
    ],
    "views": {
      "explorer": [
        {
          "id": "blogview",
          "name": "記事一覧",
          "when": "blogview-vscode.activated"
        }
      ]
    },
    "commands": [
      {
        "command": "blogview.newEntry",
        "title": "新規記事を追加",
        "icon": "$(search-new-editor)"
      },
      {
        "command": "blogview.refreshEntries",
        "title": "再読み込み",
        "icon": "$(extensions-sync-enabled)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "blogview.newEntry",
          "group": "navigation",
          "when": "view == blogview"
        },
        {
          "command": "blogview.refreshEntries",
          "group": "navigation",
          "when": "view == blogview"
        }
      ]
    },
    "configuration": {
      "title": "Blogview",
      "properties": {
        "blogview.enableTwitter": {
          "type": "boolean",
          "description": "ツイート埋め込みを有効化(再起動後に反映)",
          "default": true
        },
        "blogview.enableYoutube": {
          "type": "boolean",
          "description": "YouTube埋め込みを有効化(再起動後に反映)",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "build": "node build.js",
    "dev": "nodemon",
    "package": "pnpm vsce package --no-dependencies",
    "release": "pnpm vsce publish --no-dependencies",
    "test-vscode": "tsc -p tsconfig.test.json && node --enable-source-maps dist-test/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "~17.0.35",
    "@types/vscode": "1.67.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.14.39",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4",
    "vsce": "^2.8.0"
  },
  "dependencies": {
    "glob": "^8.0.3",
    "js-yaml": "^4.1.0",
    "markdown-it-hatena": "workspace:2.1.2"
  },
  "keywords": [
    "markdown",
    "blog",
    "hatena"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mkizka/blogview.git"
  },
  "bugs": {
    "url": "https://github.com/mkizka/blogview/issues"
  },
  "homepage": "https://github.com/mkizka/blogview",
  "license": "MIT"
}
