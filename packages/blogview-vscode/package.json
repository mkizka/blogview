{
  "name": "blogview-vscode",
  "displayName": "Blogview",
  "publisher": "mkizka",
  "private": true,
  "description": "Markdownプレビュー時に一部のはてな記法を変換する拡張機能",
  "version": "1.3.0",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./tweet.js"
    ],
    "configuration": {
      "title": "Blogview",
      "properties": {
        "blogview.enableTwitter": {
          "type": "boolean",
          "description": "ツイート埋め込みを有効化(再起動後に反映)",
          "default": true
        },
        "blogview.enableYoutube": {
          "type": "boolean",
          "description": "YouTube埋め込みを有効化(再起動後に反映)",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --outdir=dist --external:vscode --format=cjs --platform=node --minify",
    "dev": "pnpm build -- --watch",
    "package": "pnpm vsce package --no-dependencies",
    "release": "pnpm vsce publish --no-dependencies",
    "test-vscode": "tsc -p tsconfig.test.json && ts-node scripts/runTest.ts"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^2.1.1",
    "esbuild": "^0.14.11",
    "mocha": "^9.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vsce": "^2.6.3"
  },
  "dependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "glob": "^7.2.0",
    "markdown-it-hatena": "workspace:2.0.1"
  },
  "keywords": [
    "markdown",
    "blog",
    "hatena"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mkizka/blogview.git"
  },
  "bugs": {
    "url": "https://github.com/mkizka/blogview/issues"
  },
  "homepage": "https://github.com/mkizka/blogview",
  "license": "MIT"
}
