{
  "name": "blogview",
  "description": "Serves and live-reload markdown files for blog.",
  "version": "1.4.0",
  "type": "module",
  "bin": {
    "blogview": "dist/server/cli.js"
  },
  "scripts": {
    "dev": "run-p -l --silent dev:server dev:client",
    "dev:client": "wait-on http://localhost:8000 && vite",
    "dev:server": "nodemon ./src/server/cli.ts",
    "build": "rimraf dist/* && run-p -l --silent build:client build:server",
    "build:client": "tsc --project tsconfig.client.json && vite build",
    "build:server": "tsc",
    "test": "vitest run",
    "blogview": "node --loader ts-node/esm src/server/cli.ts"
  },
  "devDependencies": {
    "@swc/core": "^1.2.136",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/express": "^4.17.13",
    "@types/js-yaml": "^4.0.5",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/recursive-readdir": "^2.2.0",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.2.2",
    "@vitejs/plugin-react": "^1.1.4",
    "c8": "^7.11.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.2",
    "react-router-dom": "^6.2.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-string": "^3.0.0",
    "supertest": "^6.2.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vitest": "^0.2.7",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "arg": "^5.0.1",
    "chokidar": "^3.5.3",
    "connect-history-api-fallback": "^1.6.0",
    "express": "^4.17.2",
    "markdown-it": "^12.3.2",
    "markdown-it-hatena": "workspace:2.1.0",
    "recursive-readdir": "^2.2.2",
    "ws": "^8.4.2"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "markdown",
    "blog",
    "hatena"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mkizka/blogview.git"
  },
  "bugs": {
    "url": "https://github.com/mkizka/blogview/issues"
  },
  "homepage": "https://github.com/mkizka/blogview",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
