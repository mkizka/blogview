{
  "name": "@mkizka/blogview",
  "description": "Serves and live-reload markdown files for blog.",
  "version": "0.0.4",
  "type": "module",
  "bin": {
    "blogview": "dist/server/blogview.js"
  },
  "scripts": {
    "dev": "run-p -l dev:server dev:client",
    "dev:client": "wait-on http://localhost:8000 && vite",
    "dev:server": "nodemon ./src/server/blogview.ts",
    "build": "rimraf dist/* && run-p -l build:client build:server",
    "build:client": "tsc --project tsconfig.client.json && vite build",
    "build:server": "tsc",
    "blogview": "node dist/server/blogview.js"
  },
  "devDependencies": {
    "@exampledev/new.css": "^1.1.3",
    "@swc/core": "^1.2.127",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/ws": "^8.2.2",
    "@vitejs/plugin-react": "^1.1.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-string": "^3.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.10",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "@mkizka/blogview-utils": "workspace:^0.0.1",
    "@mkizka/rehype-hatena-embed": "workspace:^0.0.1",
    "chokidar": "^3.5.2",
    "connect-history-api-fallback": "^1.6.0",
    "express": "^4.17.2",
    "ws": "^8.4.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mkizka/blogview.git"
  },
  "bugs": {
    "url": "https://github.com/mkizka/blogview/issues"
  },
  "homepage": "https://github.com/mkizka/blogview",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  }
}
