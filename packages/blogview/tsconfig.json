{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "es2020",
    "target": "es2020",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  },
  "include": ["src"],
  "exclude": ["src/client", "node_modules"]
}
